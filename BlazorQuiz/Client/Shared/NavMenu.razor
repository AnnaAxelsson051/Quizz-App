<!-- Fixad-->

<div class="ps-2 navbar top-row">
    <div class="container-fluid">
        <a href="" class="navbar-brand">Ultimate Quizz App</a>
        <button class="navbar-toggler" title="Navigation menu" @onclick="ToggleNavigationMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCss" @onclick="ToggleNavigationMenu">
    <nav class="flex-column">
        <div class="nav-item px-2">
            <NavLink class="nav-link" Match="NavLinkMatch.All" href="/game">
                <span class="oi oi-home" aria-hidden="true"></span> Play
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool IsNavMenuCollapsed = true;

    private void ToggleNavigationMenu()
    {
        IsNavMenuCollapsed = !IsNavMenuCollapsed;
    }

    private string? NavMenuCss => IsNavMenuCollapsed ? "collapse" : null;
}
